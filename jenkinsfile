pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }

        stage('Test'){
            steps {
                 echo 'Performing tests'
            }
        }

        stage('Deploy'){
            steps{
                 echo 'Deploying the application'
            }
        }
    }

    post{

            always
            {
            emailext body: 'Checking the pipeline orchestration', subject: 'Pipeline Completed - Jenkins', to: 'rajeshg.gmx@gmail.com'
            }

    }
}